generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum role {
  CHARACTER
  DM
}

model character {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String @unique
  mod   Int
  role role @default(CHARACTER)
}

model initiative {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  initiative  Int
  is_critical Boolean
  characterId String  @unique
}
